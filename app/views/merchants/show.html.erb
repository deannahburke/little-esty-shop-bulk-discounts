<h1>Little Esty Shop</h1>
<h2><%= @merchant.name %></h2>
<%= link_to "#{@merchant.name}'s Items", "/merchants/#{@merchant.id}/items" %>
<%= link_to "#{@merchant.name}'s Invoices", "/merchants/#{@merchant.id}/invoices" %>

<section id="itemsReadyToShip">
  <h3>Items Ready to Ship</h3>
  <% @merchant.items_to_ship.each do |item| %>
    <p><%= item.name %>-Invoice <%= link_to "##{item.invoice_id}", "/merchants/#{@merchant.id}/invoices/#{item.invoice_id}" %></p>
    <% end %>
</section>

<section id="top5customers">
  <h4>Top 5 Customers</h4>
  <% @merchant.fave_customers.each_with_index do |customer, index| %>
  <div id="customer-<%= index %>">
    <p><%= "#{customer.first_name} #{customer.last_name}- #{customer.count} Transactions" %>
      <% end %>
    </div>
  </section>

  <section id="bulkDiscounts">
    <h4>Bulk Discounts</h4>
    <p><%= link_to "View Available Discounts", "/merchants/#{@merchant.id}/bulk_discounts"%></p>
  </section>
